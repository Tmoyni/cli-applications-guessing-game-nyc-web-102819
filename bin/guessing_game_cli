#!/usr/bin/env ruby

require_relative "../guessing_game_cli"

def random_number
  rand 1..6
end

def guess_number
  puts "Guess a number between 1 and 6"
end 

def get_user_input
  gets.chomp
end

def compare_input(get_user_input, random_number)
  valid_number = [1..6]
  
  guess_number
  user_input = get_user_input
  
  until valid_command.include?(user_input)
    invalid_command
    prompt_user
    user_input = get_user_input
  end 
      if user_input == "h"
      card_total += deal_card
    end
  card_total
end

def invalid_command
  puts "Please enter a valid command"
end
  
# You guessed the correct number!
# Sorry! The computer guessed <number>.
# Goodbye!

run_guessing_game
  
end

