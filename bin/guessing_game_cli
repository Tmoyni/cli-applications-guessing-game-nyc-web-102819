#!/usr/bin/env ruby

require_relative "../guessing_game_cli"

def random_number
  rand 1..6
end

def guess_number
  puts "Guess a number between 1 and 6"
end 

def get_user_input
  gets.chomp
end

def correct_guess
  puts "You guessed the correct number!"
end

def incorrect_guess(random_number)
  puts "Sorry! The computer guessed #(random_number)."
end

def compare_input(get_user_input, random_number)
  valid_number = [1..6]
  
  guess_number
  user_input = get_user_input
  
  until valid_command.include?(user_input)
    invalid_command
    guess_number
    user_input = get_user_input
  end 
      if user_input == random_number
      correct_guess
    end
  correct_guess
end

def exit_command
  puts "Goodbye!"
end
  
# You guessed the correct number!
# Sorry! The computer guessed <number>.
# 

run_guessing_game
  
end

